class Solution {
    public int numSteps(String s) {
        int ones=0,c=0;
        char[] arr=s.toCharArray();
        int l=arr.length,i=l-1;
        while(i>=0 && s.charAt(i)=='0') i--;
        for(int j=0;j<=i;j++) {
            if(s.charAt(j)=='1') ones++;
            else c++;
        }
        if(ones==1) return l-1;
        return c+l+1;
    }
}