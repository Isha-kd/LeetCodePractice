class Solution {
    public int minimumDeletions(String s) {
        int c=0,n=s.length();
        int[] arr=new int[n+1];
        arr[0]=0;
        for(int i=0;i<n;i++) {
            if(s.charAt(i)=='b') arr[i+1]=arr[i]+1;
            else{
                arr[i+1]=arr[i];
                c++;
            }
        }
        int ans=n;
        for(int i=0;i<n;i++) {
            ans=Math.min(ans,c-i-1+arr[i]+arr[i+1]);
        }
        return ans;
    }
}
